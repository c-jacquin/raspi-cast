{
  "name": "@raspi-cast/web-ext",
  "version": "0.0.0",
  "description": "Firefox addon for the cast software, allowing videos to be cast from Firefox to a Raspberry Pi running the picast server.",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "shx cp -R public/. dist/ && parcel src/*.html",
    "dev:firefox": "web-ext run --source-dir ./dist/",
    "build": "shx rm -rf dist && parcel build src/*.html && shx cp -R public/. dist/",
    "lint": "eslint src/**/*.ts",
    "test": "node scripts/test.js --env=jsdom"
  },
  "dependencies": {
    "@raspi-cast/core": "0.0.0",
    "autobind-decorator": "^2.4.0",
    "immutable-lens": "^0.4.2",
    "lenrix": "^0.8.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "redux": "^4.0.5",
    "rxjs": "^6.5.5",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/socket.io-client": "^1.4.32",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "parcel-bundler": "^1.12.4",
    "shx": "^0.3.2",
    "typescript": "^3.8.3",
    "web-ext": "^4.2.0",
    "web-ext-types": "^3.2.1"
  }
}
