{
  "name": "@raspi-cast/server",
  "version": "0.0.0",
  "description": "Node.js app wich allow a web-extension to control omxplayer via a socket.io gateway.",
  "main": "server.js",
  "scripts": {
    "postinstall": "node scripts/postinstall",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development ts-node src/main.ts",
    "lint": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "postbuild": "shx cp package.json dist && shx cp ecosystem.config.js dist && shx cp yarn.lock dist",
    "deploy:setup": "pm2 deploy ecosystem.config.js production setup",
    "deploy": "pm2 deploy ecosystem.config.js production update",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:charjac/raspi-cast-server.git"
  },
  "author": "Charles Jacquin",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/charjac/raspi-cast-server/issues"
  },
  "homepage": "https://github.com/charjac/raspi-cast-server",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/platform-socket.io": "^7.0.9",
    "@nestjs/websockets": "^7.0.9",
    "@raspi-cast/core": "0.0.0",
    "autobind-decorator": "^2.4.0",
    "child_process": "^1.0.2",
    "dbus-next": "^0.8.2",
    "dotenv": "^8.2.0",
    "ip": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "uuid": "^8.0.0",
    "youtube-dl": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/ip": "1.1.0",
    "@types/node": "^13.13.5",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^7.0.3",
    "@types/youtube-dl": "^1.12.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
